{
  "extends": [
    "@kisenka/eslint-config"
  ],
  "env": {
    "node": true
  },
  "rules": {
    "no-magic-numbers": ["error", { "ignore": [-1, 0, 1, 2, 100, 1000] }]
  },
  "overrides": [
    {
      "files": [
        "packages/*/test.js",
        "packages/*/test/{*,**/*}.test.js"
      ],
      "env": {
        "mocha": true,
        "jest": true
      },
      "globals": {
        "utils": true
      }
    },
    {
      "files": [
        "packages/svg-baker-runtime"
      ],
      "env": {
        "node": false,
        "es6": true,
        "browser": true
      }
    }
  ]
}
